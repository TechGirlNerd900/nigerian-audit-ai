APP_NAME=Nigerian Audit AI
VERSION=1.0.0
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nigerian_audit_ai
REDIS_URL=redis://localhost:6379

# GCP Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json
GCP_REGION=us-central1
GCS_BUCKET=your-bucket-name

# API Keys - Nigerian Services
FIRS_API_KEY=your-firs-api-key
FIRS_API_URL=https://atrs-api.firs.gov.ng
CAC_API_KEY=your-cac-api-key
NGX_API_KEY=your-ngx-api-key
FRC_API_KEY=your-frc-api-key

# Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
API_KEY=your-api-authentication-key

# ML Configuration
MODEL_VERSION=v1.0
TRAINING_BATCH_SIZE=32
LEARNING_RATE=0.001
MAX_EPOCHS=100

# Nigerian Tax Configuration
DEFAULT_CURRENCY=NGN
VAT_RATE=0.075
CIT_RATE_SMALL=0.0
CIT_RATE_MEDIUM=0.20
CIT_RATE_LARGE=0.30

# Rate Limiting
API_RATE_LIMIT=100
SCRAPER_DELAY=5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json